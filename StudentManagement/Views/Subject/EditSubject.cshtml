@model StudentManagement.Models.Subject

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Edit</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-4">
				<form asp-action="EditSubject" asp-controller="Subject" method="post">
					<div asp-validation-for="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="Id" class="control-label"></label>
						<input asp-for="Id" class="form-control" readonly/>
						<span asp-validation-for="Id" class="text-danger"></span>
					</div>
					<br />
					<div class="form-group">
						<label asp-for="SubjectName" class="control-label"></label>
						<input asp-for="SubjectName" class="form-control"/>
						<span asp-validation-for="SubjectName" class="text-danger"></span>
					</div>
					<br />
					<div class="form-group">
						<input type="submit" value="Update" class="btn btn-primary" />
						<a asp-action="Index" asp-controller="Subject" class="btn btn-secondary">Back to Subject List</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>