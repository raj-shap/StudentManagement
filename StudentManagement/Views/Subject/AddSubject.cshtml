@model StudentManagement.Models.Subject

@if (ViewBag.SubjectExist != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewBag.SubjectExist
	</div>
}

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Edit</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-4">
				<form asp-action="AddSubject" asp-controller="Subject" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="SubjectName" class="control-label"></label>
						<input asp-for="SubjectName" class="form-control" />
						<span asp-validation-for="SubjectName" id="subjectName" class="text-danger"></span>
					</div>
					<br />
					<div class="form-group">
						<input type="submit" value="Submit" class="btn btn-primary" />
						<a asp-action="Index" asp-controller="Subject" class="btn btn-secondary">Back to Subject List</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
