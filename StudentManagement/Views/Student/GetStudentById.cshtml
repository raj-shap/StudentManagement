@model StudentManagement.Models.Student

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Student</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-8">
				<dl class="row">

					<dt class="col-sm-2">ID</dt>
					<dd class="col-sm-10">@Model.Id</dd>

					<dt class="col-sm-2">Name</dt>
					<dd class="col-sm-10">@Model.Name</dd>

					<dt class="col-sm-2">Email</dt>
					<dd class="col-sm-10">@Model.Email</dd>

					<dt class="col-sm-2">Standard</dt>
					<dd class="col-sm-10">@Model.Standard</dd>

					<dt class="col-sm-2">Address</dt>
					<dd class="col-sm-10">@Model.Address</dd>
				</dl>

			</div>
		<div class="col-md-4">
			<img src="~/@Model.Path" class="img-thumbnail img-fluid" style="max-width:150px;" />
		</div>
		</div>
		<div class="mt-3">
			<form method="post" asp-action="DeleteStudent">
				<a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Back To Home</a>
			</form>
		</div>
	</div>
</div>