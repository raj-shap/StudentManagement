@model IEnumerable<StudentManagement.Models.StudentSubjectMarks>

<a class="btn btn-primary" asp-controller="Marks" asp-action="AddMarks">Add Mark</a>
<br />
<br />

<div class="card">
	<div class="card-header">
		<h3 class="card-title">Marks List</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-12">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Student Name</th>
							<th class="text-center">Subject Name</th>
							<th class="text-center">Marks</th>
							<th class="text-center">Edit</th>
							<th class="text-center">Delete</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Name</td>								
								<td class="text-center">@item.SubjectName</td>
								<td class="text-center">@item.Mark</td>	
								<td class="text-center">
									<a class="btn btn-warning" asp-controller="Marks" asp-action="EditMarksBySubj" asp-route-StudentId="@item.StudentId" asp-route-SubjectId="@item.SubjectId">Edit</a>
								</td>
								<td class="text-center">
									<a class="btn btn-danger" asp-controller="Marks" asp-action="DeleteMarksBySubj" asp-route-StudentId="@item.StudentId" asp-route-SubjectId="@item.SubjectId">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>